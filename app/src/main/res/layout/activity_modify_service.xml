<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyService">

    <Button
        android:id="@+id/modify_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="27dp"
        android:text="Modify"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="190dp"
        android:text="Cancel" />

    <ListView
        android:id="@+id/documentsListView"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_above="@id/modify_button"
        android:layout_marginBottom="292dp"
        android:cacheColorHint="#00000000"
        android:choiceMode="multipleChoice"
        android:drawSelectorOnTop="false" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/documentsListView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Select the documents to include in the service"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/serviceNameText"
        android:layout_width="409dp"
        android:layout_height="57dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-333dp"
        android:ems="10"
        android:hint="Enter the name of the service you want to modify"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="27dp"
        android:text="Delete" />

</RelativeLayout>