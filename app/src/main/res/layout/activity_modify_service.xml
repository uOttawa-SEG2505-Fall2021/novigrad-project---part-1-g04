<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyService">

    <Button
        android:id="@+id/modify_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="27dp"
        android:text="Modify"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/CancelRequest_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="211dp"
        android:layout_marginBottom="27dp"
        android:text="Go back" />

    <ListView
        android:id="@+id/documentsListView"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_above="@id/modify_button"
        android:layout_marginBottom="292dp"
        android:cacheColorHint="#00000000"
        android:choiceMode="multipleChoice"
        android:drawSelectorOnTop="false" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/documentsListView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Select the documents to include in the service"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/serviceNameText"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="-321dp"
        android:ems="10"
        android:hint="Enter the name of the service to modify"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

</RelativeLayout>