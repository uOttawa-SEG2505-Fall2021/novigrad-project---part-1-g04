<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddService">>

    <Button
        android:id="@+id/CancelRequest_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/confirm_button"
        android:text="Cancel"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="Confirm" />

    <ListView
        android:id="@+id/serviceListView"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_above="@id/CancelRequest_button"
        android:layout_marginBottom="292dp"
        android:cacheColorHint="#00000000"
        android:choiceMode="multipleChoice"
        android:drawSelectorOnTop="false" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/serviceListView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:text="Select the documents to include in the service"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/serviceNameText"
        android:layout_width="297dp"
        android:layout_height="64dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="-341dp"
        android:ems="10"
        android:hint="Enter the name of the service"
        android:inputType="textPersonName" />

</RelativeLayout>